<h1>作品一覧</h1>

<% if logged_in? && current_user.admin? %>
  <div style="margin-bottom: 20px;">
    <%= link_to '新しい作品を登録する', new_work_path, class: 'btn btn-primary' %>
  </div>
<% end %>

<div class="works-list">
  <% if @works.any? %>
    <% @works.each do |work| %>
      <div class="work-item" style="margin-bottom: 20px;">

        <%# サムネイル画像 %>
        <% if work.thumbnail.present? %>
          <%= image_tag(work.thumbnail, size: "200x120", alt: "#{work.title}のサムネイル") %>
        <% end %>

        <h2>
          <%= link_to work.title, work_path(work) %>
        </h2>

        <p>
          初心者へのおすすめ度：<strong><%= work.recommended ? 'おすすめ' : 'ー' %></strong>
        </p>

      </div>
    <% end %>
  <% else %>
    <p>まだ作品が登録されていません。</p>
  <% end %>
</div>
